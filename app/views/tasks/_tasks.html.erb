<ul class="media-list">
  <% tasks.each do |task| %>
    <% if current_user == task.user %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
          </div>
          <div>
            <p><%= task.content %>【<%= task.status %>】</p>
          </div>
          <div>
              <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
              <%= link_to "Edit", edit_task_path(task), class: 'btn btn-primary btn-xs' %>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
  <%= paginate tasks %>
</ul>